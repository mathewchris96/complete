<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Existing styles remain unchanged */
    </style>
</head>
<body>
    <header>
        <div class="logo">
            <img src="logo.png" alt="Logo">
        </div>
        <nav class="header-nav">
            <a class="nav-link" href="/">Home</a>
            <a class="nav-link" href="/jobs">Jobs</a>
            <a class="nav-link" href="/logout">Logout</a>
        </nav>
    </header>
    <main>
        <section id="user-details" class="main-content">
            <h2>User Profile</h2>
            <p><strong>Username:</strong> <%= user.username ? user.username : 'Not provided' %></p>
            <p><strong>Email:</strong> <%= user.email ? user.email : 'Not provided' %></p>
            <p><strong>Domain of Interest:</strong> <%= user.domainOfInterest ? user.domainOfInterest : 'Not specified' %></p>
            <p><strong>Linkedin URL:</strong> <%= user.linkedinUrl ? user.linkedinUrl : 'Not specified' %></p>
            <p><strong>Current Company:</strong> <%= user.currentCompany ? user.currentCompany : 'Not specified' %></p>
            <p><strong>Current Level:</strong> <%= user.currentLevel ? user.currentLevel : 'Not specified' %></p>
        </section>
        <section id="applied-jobs" class="main-content">
            <h2>Applied Jobs</h2>
            <% if(user.jobsAppliedFor && user.jobsAppliedFor.length > 0) { %>
                <ul>
                    <% user.jobsAppliedFor.forEach(function(job) { %>
                        <li>
                            <h3><%= job.title %></h3>
                            <p><strong>Company:</strong> <%= job.company %></p>
                            <p><strong>Location:</strong> <%= job.location %></p>
                            <p><strong>Skills Required:</strong> <%= job.skills.join(', ') %></p>
                            <button onclick="viewJobDetails('<%= job._id %>')">View</button>
                            <button onclick="withdrawApplication('<%= job._id %>')">Withdraw Application</button>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>You have not applied for any jobs yet.</p>
                <% } %>
        </section>
    </main>
    <script>
        /* Existing script remains unchanged */
    </script>
    <script src="/js/interactivity.js"></script>
</body>